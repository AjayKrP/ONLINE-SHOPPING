<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <div class="col-md-12">
            <h1><i class="fa fa-user-plus" aria-hidden="true"></i> Sign Up</h1>
            {{#if hasError}}
                <div class="alert alert-danger">
                    {{#each messages}}
                        <p>{{this}}</p>
                    {{/each}}
                </div>
            {{/if}}
        </div>
        <form action="/user/signup" method="post">
            <div class="form-group">
                <div class="clearfix">
                    <div class="col-md-6">
                        <label for="first-name">First name</label>
                        <input type="text" class="form-control" name="firstName" id="first-name" aria-describedby="nameHelp" placeholder="Enter first name">
                    </div>
                    <div class="col-md-6">
                        <label for="last-name">Last name</label>
                        <input type="text" class="form-control" name="lastName" id="last-name" aria-describedby="nameHelp" placeholder="Enter last name">
                    </div>
                </div>
            </div>
            <div class="col-md-12">
                <div class="form-group">
                    <label for="mobile">Mobile</label>
                    <input type="number" id="mobile" name="mobile" class="form-control">
                </div>
            </div>
            <div class="col-md-12">
                <div class="form-group">
                    <label for="email">E-Mail</label>
                    <input type="email" id="email" name="email" class="form-control">
                </div>
            </div>
            <div class="col-md-12">
                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" id="password" name="password" class="form-control">
                </div>
                <input type="hidden" name="_csrf" value="{{csrfToken}}">
                <button type="submit" class="btn btn-block btn-success">Sign Up</button>
            </div>
        </form>
        <div class="col-md-12">
            <div class="text-center">
                <a class="d-block small mt-3" href="/user/signin">Login Page</a><br>
                <a class="d-block small" href="#">Forgot Password?</a>
            </div>
        </div>
    </div>
</div>


<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Ready to Leave?</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Select "Logout" below if you are ready to end your current session.
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <a class="btn btn-primary" href="/user/logout">Logout</a>
            </div>
        </div>
    </div>
</div>



